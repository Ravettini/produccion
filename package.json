{
  "name": "eventos-gobierno-mvp",
  "private": true,
  "description": "MVP webapp para gesti√≥n de eventos y propuestas - Gob",
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspaces --if-present",
    "db:generate": "npm run db:generate --workspace=apps/api",
    "db:migrate": "npm run db:migrate --workspace=apps/api",
    "db:deploy": "npm run db:deploy --workspace=apps/api",
    "db:push": "npm run db:push --workspace=apps/api",
    "db:seed": "npm run db:seed --workspace=apps/api",
    "prepare-env": "node scripts/prepare-env.js",
    "setup": "npm run prepare-env && npm install && npm run db:generate && npm run db:push && npm run db:seed",
    "start": "npm run setup && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
